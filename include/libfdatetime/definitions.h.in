#if !defined( _LIBFDATETIME_DEFINITIONS_H )
#define _LIBFDATETIME_DEFINITIONS_H

#include <libfdatetime/types.h>

#define LIBFDATETIME_VERSION				@VERSION@

/* The libfdatetime version string
 */
#define LIBFDATETIME_VERSION_STRING			"@VERSION@"

/* The endian definitions
 */
enum LIBFDATETIME_ENDIAN
{
	LIBFDATETIME_ENDIAN_BIG				= (int) 'b',
	LIBFDATETIME_ENDIAN_LITTLE			= (int) 'l'
};

/* The string format definition flags
 */
enum LIBFDATETIME_STRING_FORMAT_FLAGS
{
	LIBFDATETIME_STRING_FORMAT_FLAG_DATE		= 0x01,
	LIBFDATETIME_STRING_FORMAT_FLAG_TIME		= 0x02,
	LIBFDATETIME_STRING_FORMAT_FLAG_DATE_TIME	= 0x03,
	LIBFDATETIME_STRING_FORMAT_FLAG_DURATION	= 0x04
};

/* The date and time format definitions
 */
enum LIBFDATETIME_DATE_TIME_FORMATS
{
        LIBFDATETIME_DATE_TIME_FORMAT_CTIME		= (int) 'c',
        LIBFDATETIME_DATE_TIME_FORMAT_ISO8601		= (int) 'i'
};

#endif

